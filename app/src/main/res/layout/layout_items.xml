<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@android:drawable/ic_media_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_product"
        app:layout_constraintTop_toTopOf="@id/img_product"
        tools:text="Product Name" />

    <TextView
        android:id="@+id/cost_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_transparency_10"
        app:layout_constraintStart_toStartOf="@id/name_product"
        app:layout_constraintTop_toBottomOf="@id/name_product"
        tools:text="$1,500" />

    <TextView
        android:id="@+id/new_cost_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/error"
        app:layout_constraintStart_toStartOf="@id/name_product"
        app:layout_constraintTop_toBottomOf="@id/cost_product"
        tools:text="$1,000" />

</androidx.constraintlayout.widget.ConstraintLayout>